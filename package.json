{
  "name": "wantedlab",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "preinstall-macab": "node_modules/mecab-ko-ts/bin/install-mecab ko",
    "preinstall-zenstack": "npx zenstack@latest init",
    "preinstall": "npm run preinstall-macab && npm run preinstall-zenstack",
    "prisma:db:push": "npx prisma db push",
    "prisma:generate": "npx tsc prisma/plugins/entity-plugin.ts --skipLibCheck && npx zenstack generate",
    "build": "npm run prisma:generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@fxts/core": "^1.0.1",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.19.1",
    "@prisma/generator-helper": "^5.19.1",
    "@prisma/sdk": "^4.0.0",
    "@types/graphql": "^14.2.3",
    "@zenstackhq/runtime": "2.5.1",
    "@zenstackhq/sdk": "^2.5.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dataloader": "^2.2.2",
    "graphql": "^16.9.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "joi": "^17.13.3",
    "kafkajs": "^2.2.4",
    "mecab-ko-ts": "^0.1.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "wink-tokenizer": "^5.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/joi": "^17.2.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.19.1",
    "prisma-mock": "^0.10.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "zenstack": "2.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@root/(.*)$": "<rootDir>/$1"
    }
  }
}
